@page
@model ForgotPasswordModel

@{
    var partialModel = new JumbotronPartialViewModel
    {
        Title = "Забравена парола",
        Current = "Forgot Password",
        CurrentName = "Забравена парола",
        HasSearchField = false,
        ImageUri = "https://res.cloudinary.com/aguzelov/image/upload/v1544704896/jwebhaqkfcubfboaktko.jpg"
    };
}
<partial name="~/Views/Shared/_JumbotronPartial.cshtml" model=@partialModel />

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-4">
                <section>
                    <h4>Въведете Вашия имейл.</h4>

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email">Имайл</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Изпрати</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}