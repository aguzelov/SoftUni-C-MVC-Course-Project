@model AdministrationEntityViewModel<PostSummaryViewModel, AuthorsWithPostsCountViewModel>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">Blog</h1>
        </div>
        <!-- /.col-lg-8 -->
        <div class="col-lg-2">
            <h1 class="page-header"><a asp-area="Blog" asp-controller="Blog" asp-action="Create" class="btn btn-primary">Create New Post</a></h1>
        </div>
        <!-- /.col-lg-4 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Blog Posts
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Created On</th>
                                <th>Last Modified On</th>
                                <th>Comments</th>
                                <th class="col-sm-3">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var post in Model.Entities)
                            {
                                <tr class="d-flex">
                                    <td>@post.Title</td>
                                    <td>@post.AuthorName</td>
                                    <td>@post.CreatedOn.ToString("dd.MM.yyyy")</td>
                                    <td>@post.ModifiedDateText</td>
                                    <td class="center">@post.CommmentsCount</td>
                                    <td class="col-sm-3">
                                        <div>

                                            <a asp-area="Blog" asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" class="btn btn-success">View</a>
                                            <a asp-area="Blog" asp-controller="Blog" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-danger">Edit</a>
                                            <a asp-area="Blog" asp-controller="Blog" asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Post By Users
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Author</th>
                                    <th>Posts Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int index = 1;}
                                @foreach (var author in Model.Authors)
                                {
                                    <tr>
                                        <td>@(index++)</td>
                                        <td>@author.UserName</td>
                                        <td>@author.Posts</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
</div>