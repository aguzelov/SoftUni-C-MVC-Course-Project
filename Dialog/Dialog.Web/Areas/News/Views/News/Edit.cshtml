@model NewsViewModel

@{
    var partialModel = new JumbotronPartialViewModel
    {
        Title = "Edit News",
        Current = "Edit",
        Parent = "News",
        ImageUri = "https://res.cloudinary.com/aguzelov/image/upload/v1544704896/rdc9ezgkeratzej3otlx.jpg"
    };

}

<partial name="~/Views/Shared/_JumbotronPartial.cshtml" model=@partialModel />

<section class="ftco-section">
    <div class="container">
        <div class="col-md-12 pr-md-1">
            <h2 class="mb-4">Edit News</h2>
            <form asp-area="News" asp-controller="News" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input class="form-control" asp-for="@Model.Title" />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Content"></label>
                    <textarea rows="10" asp-for="@Model.Content" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Content"></span>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-sm">
                        <input asp-for="@Model.UploadImages" class="custom-file-input form-control-sm">
                        <label asp-for="@Model.UploadImages" class="custom-file-label">Choose image or use old one</label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                </div>
            </form>
        </div>
    </div>
</section>

