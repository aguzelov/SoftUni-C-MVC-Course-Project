@*Recent News*@
<section class="ftco-section bg-light">
    <div class="container-fluid">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-5 heading-section ftco-animate text-center">
                <h2 class="mb-4">Recent News</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="carousel-cause owl-carousel">
                    @foreach (var news in Model.News)
                    {
                        <div class="item">
                            <div class="cause-entry">
                                <a asp-area="News" asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="img" style="background-image: url('@(news.Image?.SecureUri??"/images/event-1.jpg")');">
                                </a>
                                <div class="text p-3 p-md-4" style="height:250px;">
                                    <h3><a asp-area="News" asp-controller="News" asp-action="Details" asp-route-id="@news.Id">@news.Title</a></h3>
                                    <p>@news.ShortContent</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@*Gallery*@
<section class="ftco-gallery">
    <div class="d-md-flex">
        @{ var index = 1;}
        @foreach (var image in Model.Images)
        {
            <a href="@image.SecureUri" class="gallery image-popup d-flex justify-content-center align-items-center img ftco-animate" style="background-image: url(@image.SecureUri);">
                <div class="icon d-flex justify-content-center align-items-center">
                    <span class="icon-search"></span>
                </div>
            </a>

            if (index == 4)
            {
            @:</div>
            @:<div class="d-md-flex">
                index = 0;
            }

            index++;
        }
    </div>
</section>

