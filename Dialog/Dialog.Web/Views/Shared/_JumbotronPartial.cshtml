@model JumbotronPartialViewModel

<div class="hero-wrap" style="background-image: url('@Model.ImageUri');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-7 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                    <span class="mr-2">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                    </span>
                    @if (!string.IsNullOrEmpty(Model.Parent))
                    {
                        <span class="mr-2">
                            <a asp-area=@Model.Parent asp-controller=@Model.Parent asp-action="All">@Model.ParentName</a>
                        </span>
                    }

                    <span>@Model.CurrentName</span>
                </p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">@Model.Title</h1>
            </div>
            @if (Model.HasSearchField)
            {
                <div class="col-md-7 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                    <form asp-area=@Model.Current asp-controller=@Model.Current asp-action="Search" method="get">
                        <div class="form-group">
                            <span class="icon fa fa-search"></span>
                            <input type="text" class="form-control" name="searchTerm" placeholder="Търсене" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>